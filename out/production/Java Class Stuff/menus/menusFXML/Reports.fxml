<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="menus.Reports">
    <children>

        <Label fx:id="reportTypeLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="1.0" layoutY="14.0" prefHeight="30.0" prefWidth="600.0" text="Customers Per City Report" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
      <ComboBox fx:id="usersCbox" layoutX="226.0" layoutY="63.0" onAction="#updateUsers" prefWidth="150.0" visible="false" />
      <ListView fx:id="usersListView" layoutX="35.0" layoutY="106.0" prefHeight="212.0" prefWidth="538.0" visible="false" />
      <ListView fx:id="typesListView" layoutX="133.0" layoutY="68.0" prefHeight="279.0" prefWidth="346.0" visible="false" />
      <ListView fx:id="customerListView" layoutX="131.0" layoutY="68.0" prefHeight="279.0" prefWidth="346.0" visible="true" />
      <HBox layoutY="356.0" prefHeight="45.0" prefWidth="600.0" spacing="70.0">
         <children>
              <Button mnemonicParsing="false" onAction="#showCustReport" text="Customers Report" />
              <Button mnemonicParsing="false" onAction="#showUserReport" text="Users Report" />
              <Button mnemonicParsing="false" onAction="#showTypesReport" text="Types Report" />
              <Button mnemonicParsing="false" onAction="#openMainMenu" text="Main Menu" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
    </children>

</AnchorPane>
